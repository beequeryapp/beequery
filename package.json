{
    "name": "beequery-monorepo",
    "private": true,
    "version": "0.1.0",
    "workspaces": [
        "apps/*"
    ],
    "scripts": {
        "dev:desktop": "cd apps/desktop && bun run dev",
        "build:desktop": "cd apps/desktop && bun run build",
        "tauri": "cd apps/desktop && bun run tauri",
        "dev:website": "cd apps/website && bun run dev",
        "build:website": "cd apps/website && bun run build",
        "dev": "concurrently \"bun run dev:desktop\" \"bun run dev:website\"",
        "build": "bun run build:desktop && bun run build:website",
        "install:all": "bun install && cd apps/desktop && bun install && cd ../website && bun install",
        "ui:add:web": "cd apps/website && bun run ui:add",
        "ui:add:desk": "cd apps/desktop && bun run ui:add"
    },
    "devDependencies": {
        "concurrently": "^9.0.2"
    }
}
